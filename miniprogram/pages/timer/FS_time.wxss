page{
  width: 100%;
  height: 100%;
}
.full_Screen{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  display: flex;
}
.left{
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.right{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.records-wrapper{
  display: flex;
  padding: 10rpx;
  flex-direction: column;
  height: 60%;
  overflow: scroll;
}
.records{
  display: flex;
  justify-content: space-between;

}
.btns{
  display: flex;
}
.btn{
  margin: 0 5rpx;
  font-size: 20rpx;
  border-radius: 5rpx;
}




